<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_file_invoice_dollar_solid" />

    <TextView
        android:id="@+id/inv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="22/01/22" />

    <TextView
        android:id="@+id/inv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Daniel Gabbay" />

    <TextView
        android:id="@+id/inv_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="אל״מ דיוטי פרי" />

    <TextView
        android:id="@+id/inv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="42.33 NIS" />

</LinearLayout>